{
	"schemaVersion": 1,
	"id": "specter-core",
	"version": "${mod_version}",
	"name": "Specter Core",
	"description": "Library for Spirit Studios mods (Core module)",
	"authors": [],
	"contact": {
		"repo": "https://github.com/SpiritGameStudios/Specter",
		"issues": "https://github.com/SpiritGameStudios/Specter/issues"
	},
	"license": "MPL-2.0",
	"environment": "*",
	"entrypoints": {
		"client": [
			"dev.spiritstudios.specter.impl.core.SpecterClient"
		]
	},
	"mixins": [
		"specter-core.mixins.json",
		{
			"config": "specter-core.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=${fabric_loader_version}",
		"minecraft": "~${minecraft_version}-",
		"fabric-api": "*",
		"java": ">=21"
	},
	"custom": {
		"modmenu": {
			"parent": "specter",
			"badges": [
				"library"
			]
		}
	}
}
